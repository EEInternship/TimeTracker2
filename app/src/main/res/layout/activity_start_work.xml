<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundActivity"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="eeinternship.com.timetracker.StartWorkActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_start_work"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--options fab-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:elevation="6dp"
        android:src="@drawable/ic_more"
        app:backgroundTint="#04b795"
        app:pressedTranslationZ="12dp" />

    <!--select projects-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="100dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/label_select_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="SELECT PROJECT"
            android:visibility="invisible" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_select_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:elevation="0.0dp"
            android:src="@drawable/ic_add"
            android:visibility="invisible"
            app:backgroundTint="#f1490b"
            app:pressedTranslationZ="12dp" />
    </LinearLayout>

    <!--finish work-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="160dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/label_finish_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="FINISH WORK"
            android:visibility="invisible" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_finish_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:elevation="0.0dp"
            android:src="@drawable/ic_done"
            android:visibility="invisible"
            app:backgroundTint="#04b795"
            app:pressedTranslationZ="12dp" />
    </LinearLayout>

    <!--project one-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="220dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/name_project_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="PROJECT ONE"
            android:visibility="invisible" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_first_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:elevation="0.0dp"
            android:src="@drawable/ic_assignment"
            android:visibility="invisible"
            app:backgroundTint="#3ecaff"
            app:pressedTranslationZ="12dp" />
    </LinearLayout>

    <!--project two-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="280dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/name_project_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="PROJECT TWO"
            android:visibility="invisible" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_second_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:elevation="0.0dp"
            android:src="@drawable/ic_assignment"
            android:visibility="invisible"
            app:backgroundTint="#3ecaff"
            app:pressedTranslationZ="12dp" />
    </LinearLayout>

    <!--project three-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="340dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/name_project_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="PROJECT THREE"
            android:visibility="invisible" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_third_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:elevation="0.0dp"
            android:src="@drawable/ic_assignment"
            android:visibility="invisible"
            app:backgroundTint="#3ecaff"
            app:pressedTranslationZ="12dp" />
    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>
