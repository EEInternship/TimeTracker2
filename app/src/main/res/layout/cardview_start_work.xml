<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <!--Bottom View For Right to Left-->
    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/tvDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@xml/btn_round_right"
            android:gravity="center"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete" />
    </LinearLayout>

    <!-- Another Bottom View For Left to Right -->
    <LinearLayout
        android:id="@+id/bottom_wrapper1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_send"
            android:background="@xml/btn_round_left"/>
    </LinearLayout>

    <!-- Top View,  Row itemView of RecyclerView -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        swipe:cardBackgroundColor="#FFFFFF"
        swipe:cardUseCompatPadding="true"
        swipe:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <!--color of project-->
            <LinearLayout
                android:id="@+id/color_of_project"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.48"
                android:background="#C0C0C0"
                android:orientation="horizontal" />

            <!--main-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.12"
                android:orientation="vertical">
                <!--name of project-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/project_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="PROJECT NAME"
                        android:textColor="#9b9b9b"
                        android:textSize="15dp" />
                </LinearLayout>
                <!--description-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="8dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp">

                        <EditText
                            android:id="@+id/desc_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Task description"
                            android:singleLine="true"
                            android:textSize="15dp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
            <!--play/pause/time-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <ImageButton
                    android:id="@+id/btn_start_work"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/img_start_btn" />

                <TextView
                    android:id="@+id/hour_min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center"
                    android:paddingTop="10dp"
                    android:text="00:00"
                    android:textColor="#9b9b9b"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</com.daimajia.swipe.SwipeLayout>
